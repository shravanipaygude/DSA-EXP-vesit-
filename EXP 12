#include <stdio.h>
#include <string.h>

// Structure to store book details
struct Book {
    int id;
    char title[50];
};

// Function to perform Binary Search on book IDs
int binarySearch(struct Book books[], int n, int key) {
    int low = 0, high = n - 1, mid;

    while (low <= high) {
        mid = (low + high) / 2;

        if (books[mid].id == key)
            return mid;
        else if (books[mid].id < key)
            low = mid + 1;
        else
            high = mid - 1;
    }

    return -1; // Book not found
}

int main() {
    struct Book books[] = {
        {101, "C Programming"},
        {105, "Data Structures"},
        {110, "Operating Systems"},
        {115, "Database Management"},
        {120, "Computer Networks"}
    };

    int n = sizeof(books) / sizeof(books[0]);
    int searchID, result;

    printf("===== LIBRARY BOOK SEARCH SYSTEM =====\n");
    printf("List of Books (Sorted by ID):\n");
    for (int i = 0; i < n; i++) {
        printf("Book ID: %d\tTitle: %s\n", books[i].id, books[i].title);
    }

    printf("\nEnter Book ID to search: ");
    scanf("%d", &searchID);

    result = binarySearch(books, n, searchID);

    if (result != -1)
        printf("\nBook Found!\nBook ID: %d\nTitle: %s\n", books[result].id, books[result].title);
    else
        printf("\nBook with ID %d not found in library.\n", searchID);

    return 0;
}
