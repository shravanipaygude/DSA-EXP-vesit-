#include <stdio.h>

// Function to display the array
void display(int arr[], int n) {
    for (int i = 0; i < n; i++)
        printf("%d ", arr[i]);
    printf("\n");
}

// Selection Sort
void selectionSort(int arr[], int n) {
    int i, j, min, temp;
    for (i = 0; i < n - 1; i++) {
        min = i;
        for (j = i + 1; j < n; j++) {
            if (arr[j] < arr[min])
                min = j;
        }
        // Swap
        temp = arr[i];
        arr[i] = arr[min];
        arr[min] = temp;
    }
    printf("\nArray sorted using Selection Sort:\n");
    display(arr, n);
}

// Bubble Sort
void bubbleSort(int arr[], int n) {
    int i, j, temp;
    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                // Swap
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
    printf("\nArray sorted using Bubble Sort:\n");
    display(arr, n);
}

// Insertion Sort
void insertionSort(int arr[], int n) {
    int i, j, key;
    for (i = 1; i < n; i++) {
        key = arr[i];
        j = i - 1;
        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j--;
        }
        arr[j + 1] = key;
    }
    printf("\nArray sorted using Insertion Sort:\n");
    display(arr, n);
}

int main() {
    int arr[100], n, choice, i;
    int tempArr[100]; // For restoring original array between sorts

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
        tempArr[i] = arr[i];
    }

    while (1) {
        printf("\n===== MENU =====\n");
        printf("1. Selection Sort\n");
        printf("2. Bubble Sort\n");
        printf("3. Insertion Sort\n");
        printf("4. Display Original Array\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        // Reset array to original values before each sort
        for (i = 0; i < n; i++)
            arr[i] = tempArr[i];

        switch (choice) {
            case 1:
                selectionSort(arr, n);
                break;

            case 2:
                bubbleSort(arr, n);
                break;

            case 3:
                insertionSort(arr, n);
                break;

            case 4:
                printf("\nOriginal Array:\n");
                display(tempArr, n);
                break;

            case 5:
                printf("\nExiting...\n");
                return 0;

            default:
                printf("\nInvalid choice! Please try again.\n");
        }
    }

    return 0;
}
